<%-include("common/message.ejs", {message: message})%>

<% if(typeof repos !== "undefined" ) {%>
  <h2 class="mt-4 mb-8 font-bold text-lg tracking-wide">
    Environments
  </h2>
  <div class="px-2 sm:px-6 lg:px-8 md:mt-8 mb-8 md:my-16">
    <div class="grid md:grid-cols-3 gap-4 md:gap-8">
      <% repos.forEach((repo, index) => {%>
      <div
        class="max-w-sm border bg-white border-gray-300 rounded overflow-hidden shadow-md"
      >
        <div class="px-6 py-4 border-b border-gray-300">
          <a
            class="text-xl text-blue-500 hover:text-blue-800 focus:text-blue-800"
            href="<%=repo.html_url%>"
            >
            <%= repo.name %>
          </a>
          <p class="text-sm text-gray-500 h-16">
            <%=repo.description || 'No Description Available'%>
          </p>
        </div>
        <div class="flex items-center flex-row">
          <a
            class="px-6 w-full py-4 text-center text-gray-700 hover:bg-gray-100"
            href="/environments/<%=repo.id%>"
            >View Deployments
          </a>
        </div>
      </div>
      <%});%>
    </div>
  </div>
<%}%>
